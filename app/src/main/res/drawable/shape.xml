<?xml version="1.0" encoding="UTF-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">


    <shape>

    <solid android:color="#FFFFFF"/>

    <stroke android:color="#FFFFFF" android:width="1dp"/>

    <corners android:radius="20dp"/>

    <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"/>

</shape>

</item>


   <item>


    <shape>

    <gradient android:angle="270" android:endColor="#FF4081" android:startColor="#FF4081"/>

    <stroke android:color="#FF4081" android:width="1dp"/>

    <corners android:radius="25dp"/>

    <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"/>

</shape>

</item>

</selector>